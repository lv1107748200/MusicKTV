<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/x280"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:clickable="true"
    android:focusable="true"
    >
    <com.hr.musicktv.widget.layout.RoundFrameLayout
        android:duplicateParentState="true"
        android:id="@+id/layout_search"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x64"
        android:background="@drawable/selector_item_background"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:duplicateParentState="true"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:gravity="center"
            >
            <ImageView
                android:duplicateParentState="true"
                android:layout_width="@dimen/x40"
                android:layout_height="@dimen/x40"
                android:background="@drawable/foc_image_one"
                />
            <TextView
                android:layout_marginLeft="@dimen/x20"
                android:duplicateParentState="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/svp_search"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="@drawable/foc_tv_color_one"
                />
        </LinearLayout>
    </com.hr.musicktv.widget.layout.RoundFrameLayout>
    <View
        android:layout_marginTop="@dimen/x40"
        android:layout_marginBottom="@dimen/x30"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="@color/c_687"/>
</LinearLayout>



